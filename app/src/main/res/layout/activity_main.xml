    <TextView
        android:id="@+id/deptname"
        android:layout_width="350dp"
        android:layout_height="69dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Select Department"
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/comps"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/computer"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/FE"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/it"
        android:src="@drawable/it"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/SE"
        app:layout_constraintTop_toBottomOf="@+id/comps" />

    <ImageView
        android:id="@+id/extc"
        android:src="@drawable/extc"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/TE"
        app:layout_constraintTop_toBottomOf="@+id/it" />


    <ImageView
        android:id="@+id/mech"
        android:layout_width="72dp"
        android:src="@drawable/mechanical"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/BE"
        app:layout_constraintTop_toBottomOf="@+id/extc" />

    <TextView
        android:id="@+id/FE"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="COMPUTERS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/SE"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="IT"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/TE"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="EXTC"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/BE"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="MECHANICAL"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />


    <Button
        android:id="@+id/logout_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectanglebutton"
        android:text="logout"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:background="#5B60DA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>