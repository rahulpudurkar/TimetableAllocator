<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Standards">

    <Button
        android:id="@+id/button_back"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="Select Class"
        android:textColor="@color/color1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_back"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/FE"
        android:layout_width="347dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="FIRST YEAR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/SE"
        android:layout_width="347dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="SECOND YEAR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/TE"
        android:layout_width="347dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="THIRD YEAR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/BE"
        android:layout_width="347dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_modules"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="FOURTH YEAR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_conversion_absoluteHeight="86dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:background="#5B60DA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>